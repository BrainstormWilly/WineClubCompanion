<div class="page-header">
  <h1>New Account</h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for @account, html: {class: "form-inline"} do |f| %>
      <div class="form-group">
        <label for="winery">Winery</label>
        <input type="text" class="form-control" id="account_winery_name" disabled>
        <%= f.hidden_field :winery_id %>
      </div>
      <div class="form-group">
        <label for="manager">Manager</label>
        <input type="text" class="form-control" id="account_user_name" disabled>
        <%= f.hidden_field :user_id %>
      </div>
      <%= f.submit "Add Account", class: "add_account btn btn-success pull-right" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title">Wineries</h3></div>
      <%= render partial: "shared/list_bar", locals:{page:"accounts_new_wineries"} %>
      <div class="panel-body">
        <div id="accounts_new_wineries_list" data-turbolinks="false" class="list-group"></div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title">Managers</h3></div>
      <%= render partial: "shared/list_bar", locals:{page:"accounts_new_managers"}  %>
      <div class="panel-body">
        <div id="accounts_new_managers_list" data-turbolinks="false" class="list-group"></div>
      </div>
    </div>
  </div>
</div>
