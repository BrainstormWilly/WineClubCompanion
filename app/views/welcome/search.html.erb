<%= render partial: 'shared/jumbo' %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">We found <%= @clubs.count %> Wine Clubs for email <%= @member.email %>.</h4>
  </div>
  <div class="list=group">
    <% @clubs.each do |club| %>
      <div class="list-group-item">
        <h4 class="list-group-item-heading"><%= club.winery.name %></h4>
        <p class="list-group-item-text"><%= club.name %> | joined <%= club.created_at.strftime("%B %e, %Y") %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Create Wine Club Companion User Account</h4>
  </div>
  <div class="panel-body">
    <%= form_for @member, as: :member, url: members_path(@member) do |f| %>
      <div class="form-group">
        <%= f.text_field :firstname, class: "form-control", placeholder: "First Name" %>
      </div>
      <div class="form-group">
        <%= f.text_field :lastname, class: "form-control", placeholder: "Last Name" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
      <div class="form-group">
        <%= f.submit "Sign Me Up!", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
