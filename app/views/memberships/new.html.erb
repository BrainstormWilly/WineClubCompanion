<div class="page-header">
  <h1>New Membership</h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for @membership, html: {class: "form-inline"} do |f| %>
      <div class="form-group">
        <label for="club">Club</label>
        <input type="text" class="form-control" id="club" disabled>
        <%= f.hidden_field :club_id %>
      </div>
      <div class="form-group">
        <label for="member">Member</label>
        <input type="text" class="form-control" id="member" disabled>
        <%= f.hidden_field :user_id %>
      </div>
      <%= f.submit "Add Membership", class: "add_membership btn btn-success pull-right" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title">Clubs</h3></div>
      <%= render partial: "shared/list_bar", locals: {page: "memberships_new_clubs", filters:["winery","club"]} %>
      <div class="panel-body">
        <div id="memberships_new_clubs_list" data-turbolinks="false" class="list-group"></div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title">Members</h3></div>
      <%= render partial: "shared/list_bar", locals: {page: "memberships_new_members"} %>
      <div class="panel-body">
        <div id="memberships_new_members_list" data-turbolinks="false" class="list-group"></div>
      </div>
    </div>
  </div>
</div>
