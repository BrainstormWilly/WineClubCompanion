
<nav class="navbar navbar-default">
  <div class="container-fluid">

  

    <% if defined?(filters) %>
      <ul class="nav navbar-nav">
      <% filters.each do |f| %>
        <li id="<%= "#{page}_#{f}" %>" data-turbolinks="false"><a id="<%= "filter_#{page}_#{f}" %>" href="" >By <%= f.capitalize %></a></li>
      <% end %>
      </ul>
    <% end %>

    <form id="<%= "search_#{page}" %>" class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input id="q" type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default" data-turbolinks="false">Submit</button>
    </form>

    <% if defined?(new_path) %>
      <form class="navbar-form navbar-right">
        <%= link_to "New", new_path, class: "btn btn-success" %>
      </form>
    <% end %>

  </div>
</nav>
