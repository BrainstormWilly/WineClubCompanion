<div class="page-header">
  <h1>Wine Clubs
    <% if current_user.manager? %>
      <small>for <%= current_user.fullname %></small>
    <% end %>
  </h1>
</div>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
      <li><a class="filters" data-filter="club" href="">by Club</a></li>
      <li><a class="filters" data-filter="winery" href="">by Winery</a></li>
    </ul>

    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>

    <form class="navbar-form navbar-right">
      <%= link_to "New", new_club_path, class: "btn btn-success" %>
    </form>
  </div>
</nav>

<div id="clubs" class="list-group">
  <% @clubs.each do |c| %>
    <%= link_to(c, {class: "list-group-item"}) do %>
      <h4 class="list-group-item-heading"><%= c.name %></h4>
      <h5 class="list-group-item-heading">Winery: <%= c.winery.name %></h5>
      <% if current_user.admin? %>
        <h5 class="list-group-item-heading">Manager: <%= c.winery.name %></h5>
      <% end %>
      <p class="list-group-item-text"><%= c.description %></p>
    <% end %>
  <% end %>
</div>

<div id="wineries" class="list-group">
  <% @wineries.each do |w| %>
    <div class="list-group-item">
      <h4><%= w.name %></h4>
      <% if current_user.admin? %>
        <h5>Manager: <small><%= w.account.user.fullname %></small></h5>
      <% end %>
      <% w.clubs.each do |c| %>
        <%= link_to(c, {class: "list-group-item"}) do %>
          <h5 class="list-group-item-heading"><%= c.name %></h5>
          <p class="list-group-item-text"><%= c.description %></p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
